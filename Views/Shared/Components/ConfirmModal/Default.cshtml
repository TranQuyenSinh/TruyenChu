@model truyenchu.Components.ConfirmModal.Input

<style>
    .modal,
    modal-dialog,
    modal-content,
    modal-header,
    modal-title {
        color: #333 !important;
    }
</style>
<form
    class="form-inline"
    asp-area="@Model.Area"
    asp-controller="@Model.Controller"
    asp-action="@Model.Action"
    asp-route-returnUrl="@Model.ReturnUrl"
    method="POST"
>
    <div
        class="modal"
        id="@Model.Id"
        tabindex="-1"
    >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Model.Title</h5>
                    <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"
                    ></button>
                </div>
                <div class="modal-body">
                    <p>@Model.Content</p>
                </div>
                <div class="modal-footer">
                    <button
                        type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal"
                    >
                        Đóng
                    </button>
                    <button
                        type="submit"
                        class="btn btn-primary"
                    >
                        Xác nhận
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
