@model AppUser
@{
    ViewData["Title"] = "Xóa tài khoản";
    ViewData["ActivePage"] = ManageNavPages.User;
}

<h3>
    Xác nhận xóa tài khoản này?
</h3>
<div>
    <h4 class="fw-bold text-danger">"@Model.UserName"</h4>
    <hr />
    <form asp-action="Delete" method="POST">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-secondary" asp-action="Index">
            <i class="bi bi-caret-left-fill"></i>Quay lại
        </a>
        <input type="submit" value="Xác nhận" class="btn btn-danger" />
    </form>
</div>