@model truyenchu.Models.Author

@{
    ViewData["Title"] = "Xóa tác giả";
    ViewData["ActivePage"] = ManageNavPages.Author;
}

<h3>
    Xác nhận xóa tác giả này?
    <small class="text-reset">(Các truyện của tác giả này cũng sẽ bị xóa theo)</small>
</h3>
<div>
    <h4 class="fw-bold text-danger">"@Model.AuthorName" <i>(@Model.AuthorSlug)</i></h4>
   
    
    <hr />
    <form asp-route="DeleteAuthor">
        <input type="hidden" asp-for="AuthorId" />
        <a class="btn btn-secondary" asp-action="Index">
            <i class="bi bi-caret-left-fill"></i>Quay lại
        </a>
        <input type="submit" value="Xác nhận" class="btn btn-danger" />
    </form>
</div>
