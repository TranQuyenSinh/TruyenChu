@model truyenchu.Models.Author

@{
    ViewData["Title"] = "Sửa tác giả";
    ViewData["ActivePage"] = ManageNavPages.Author;
}

<div class="row">
    <div class="col-md-4">
        <form asp-route="EditAuthor">
            <input type="hidden" asp-for="AuthorId" />
            <div class="form-group">
                <label asp-for="AuthorName" class="control-label"></label>
                <input asp-for="AuthorName" class="form-control" />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="bi bi-caret-left-fill"></i>Quay lại
                </a>
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
