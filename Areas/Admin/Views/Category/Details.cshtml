@model truyenchu.Models.Category

@{
    ViewData["Title"] = "Chi tiết thể loại";
    ViewData["ActivePage"] = ManageNavPages.Category;
}


<div>
    <h4><strong class="text-primary">@Model.CategoryName</strong></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            URL
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategorySlug)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-secondary" asp-action="Index">
        <i class="bi bi-caret-left-fill"></i>Quay lại
    </a>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.CategoryId">
        Chỉnh sửa
    </a>
</div>
